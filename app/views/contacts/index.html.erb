<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="en">
  <head>
    <title>Contact</title>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"></link>
    <%= stylesheet_link_tag "keyboard.min.css","keyboard-basic.min.css","keyboard-dark.min.css","keyboard-previewkeyset.min.css" %>
  </head>
  <body>
    <br/>
    <div class="container">
      <div class="row">
        <br/>
        <p id="notice"><%= notice %></p>
    <h1>Contacts</h1>
    <%= form_tag(contacts_path) do %>
      <%= text_field_tag :name, params[:name], :id => 'my_search', :readonly => 'readonly' %>
      <%= submit_tag 'Search' %>
    <% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.number %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), remote: true %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if !@contacts.present? %>
    <h2>No data found</h2>
  <% end %>
<%= link_to 'New Contact', new_contact_path,remote: true, :class=>'btn btn-primary' %>
<%= link_to 'Back', contacts_path,remote: true, :class=>'btn btn-success' %>

      </div>
    </div>
  </body>
</html>
