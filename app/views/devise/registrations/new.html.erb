<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" id="bootstrap-css" rel="stylesheet"></link>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"></link>
<div class="container">
  <div class="omb_login">
    <h3 class="omb_authTitle">
      Sign Up
    </h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row omb_row-sm-offset-3">
        <div class="col-xs-12 col-sm-6">
          <form autocomplete="off" class="omb_loginForm" method="POST">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-user"></i>
              </span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", placeholder: "please give valid Email address" %>
            </div>
            <span class="help-block"></span>
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-lock"></i>
              </span>
              <%= f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "please give password for your account" %>
            </div>
            <span class="help-block"></span>
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-lock"></i>
              </span>
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", placeholder: "please confirm your password" %>
            </div>
            <span class="help-block"></span>
            <%= f.submit "Sign up", :class => "btn btn-primary btn-block"  %>
          </form>
        </div>
      </div>
    <% end %>
  </div>
</div>
